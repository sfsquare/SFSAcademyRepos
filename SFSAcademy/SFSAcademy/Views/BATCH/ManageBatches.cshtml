@model IEnumerable<SFSAcademy.BATCH>

@{
    ViewBag.Title = "ManageBatch";
}


<div id="content-header">
    <img src="~/Content/images/show_settings.png" alt="Settings Logo">
    <h1>Courses</h1>
    <h3>Manage Batch</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" width="100%"></div>
<div id="inner-tab-menu">
    <ul>
        <li>@Html.ActionLink("New", "Create")</li>
    </ul>
</div>
<div id="page-yield">
    <div class="bread_crumb">
        <a href="@Url.Action("Index", "Configuration")">Configuration</a> &raquo;
        <a href="@Url.Action("Index", "BATCH")">Batch</a> &raquo;
        Manage Batch
    </div>
    @if (Html.ValidationSummary() != null)
    {
        <p class="flash-msg"> @Html.ValidationSummary() </p>
    }
    <div class="box">
        <h4 align="center">Batches</h4>
        <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
            @{int i = 1; }
            @foreach (var item in Model)
            {
                string selectedRow = "tr-even";
                if (i % 2 == 0)
                {
                    selectedRow = "tr-odd";
                }
                <tr class="@selectedRow">
                    <td>
                        @Html.DisplayFor(modelItem => item.NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.COURSE.CRS_NAME)
                    </td>
                    <td>
                        <span>   </span>
                        <span>   </span>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
                i = i + 1;
            }
        </table>
        <div class="extender"></div>
    </div>
</div>


