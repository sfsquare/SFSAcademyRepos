@model PagedList.IPagedList<SFSAcademy.Models.Student>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<div id="content-header">
    <img src="~/Content/images/student_details/student_details_logo.jpg" alt="Student Details Logo">
    <h1>Student</h1>
    <h3>Advanced Search</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" width="100%"></div>
<div id="page-yield">
    <div id="search_box_bg">
        @if (Html.ValidationSummary() != null)
        {
            <p class="flash-msg"> @Html.ValidationSummary() </p>
        }
        <div id="searchbox">
            <form name="search-form" id="search-form" action="" style="display:inline;">
                @using (Html.BeginForm("AdvancedSearch", "Student", FormMethod.Get))
                {
                    <p>
                        <table >                      
                            <tr >
                                <td>
                                    <div class="label-field-pair">
                                        <label for="FIRST_NAME">Name:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="ADMSN_NO">Admission Number:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("AdmissionNumber", ViewBag.CurrentFilter2 as string)
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="ADMSN_NO">Course:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("Course", ViewBag.CurrentFilter3 as string)
                                        </div>
                                    </div>   
                                </td>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="NAME">Course Batches:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("CourseBatches", ViewBag.CurrentFilter4 as string)
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="NAME">Category:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("Category", ViewBag.CurrentFilter5 as string)
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="GNDR">Student Gender:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("StudentGender", ViewBag.CurrentFilter6 as string)
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="BLOOD_GRP">Student Gender:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("BloodGroup", ViewBag.CurrentFilter7 as string)
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="NAME">Student Grade:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("StudentGrade", ViewBag.CurrentFilter8 as string)
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="DOB">Student Birth From Date:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("StudentBirthFromDate", ViewBag.CurrentFilter9 as string)
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="label-field-pair">
                                        <label for="DOB">Student Birth To Date:</label>
                                        <div class="text-input-bg">
                                            @Html.TextBox("StudentBirthToDate", ViewBag.CurrentFilter10 as string)
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>                       
                        
                        <div id="pdf-view-button" >
                            <ul>
                                <li><input type="submit" value="Search" class="submit-button" /></li>
                            </ul>
                            <ul>
                                <li><a href="@Url.Action("AdvancedSearchPdf", "Student")" alt="View PDF Report" target="_blank" class="submit-button">View PDF Report</a></li>
                            </ul>
                        </div>
                    </p>
                }
                <div class="extender"></div>
            </form>
        </div>
    </div>

    <div class="students-table">
        <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
            <tr class="tr-head">
                <th>
                    Sl. No.
                </th>
                <th>
                    @Html.ActionLink("Last Name", "AdvancedSearch", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Batch
                </th>
                <th>
                    @Html.ActionLink("Admission Date", "AdvancedSearch", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    Admission Number
                </th>
                <th></th>
            </tr>
            <tr class="tr-blank"></tr>
            @{int i = 1; }
            @foreach (var item in Model)
            {
                string selectedRow = "tr-even";
                if (i % 2 == 0)
                {
                    selectedRow = "tr-odd";
                }
                <tr class="@selectedRow">
                    <td class="col-1">@i</td>
                    <td class="col-2">
                        @Html.DisplayFor(modelItem => item.StudentData.LAST_NAME)
                    </td>
                    <td class="col-3">
                        @Html.DisplayFor(modelItem => item.StudentData.FIRST_NAME)
                    </td>
                    <td class="col-4">
                        @Html.DisplayFor(modelItem => item.BatcheData.NAME)
                    </td>
                    <td class="col-5" nowrap>
                        @Html.DisplayFor(modelItem => item.StudentData.ADMSN_DATE)
                    </td>
                    <td class="col-5" nowrap>
                        @Html.DisplayFor(modelItem => item.StudentData.ADMSN_NO)
                    </td>
                    <td class="col-6" nowrap>
                        @Html.ActionLink("Edit ", "Edit", new { id = item.StudentData.ID })|@Html.ActionLink(" Details ", "Details", new { id = item.StudentData.ID })|@Html.ActionLink(" Delete", "Delete", new { id = item.StudentData.ID })
                    </td>
                </tr>
                i = i + 1;
            }
        </table>
        <br />
        @Html.PagedListPager(Model, page => Url.Action("AdvancedSearch",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>

    <div id="user_information"> </div>
    <div class="extender"> </div>
    <div id="information"></div>
</div>